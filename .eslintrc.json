{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "plugin:@typescript-eslint/recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "@typescript-eslint/indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "@typescript-eslint/semi": [
            "error",
            "always"
        ]
    }
}